{
    "private": true,
    "type": "module",
    "name": "kontext",
    "version": "1.0.0",
    "license": "SEE LICENSE IN LICENSE",
    "author": "Shovit Dutta <shovitdutta1@gmail.com>",
    "description": "Kontext is a GenAI-powered news blog to stay updated with the latest news, transformed into engaging blog posts using GenAI.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ShovitDutta/kontext.git"
    },
    "engines": {
        "node": ">=20.19.4"
    },
    "scripts": {
        "dev": "next dev",
        "lint": "next lint",
        "start": "next start",
        "format": "prettier --write .",
        "db:migrate": "drizzle-kit migrate",
        "db:pull": "drizzle-kit pull --config=drizzle.config.ts",
        "db:push": "drizzle-kit push --config=drizzle.config.ts",
        "build": "npx rimraf .next .cache && yarn lint && next build",
        "clean": "npx rimraf .next .cache node_modules prisma/migrations",
        "db:generate": "drizzle-kit generate --out ./drizzle --schema ./src/db/schema.ts",
        "preflight:dev": "yarn clean && yarn install --verbose && yarn db:pull && yarn lint && yarn format && yarn build",
        "preflight:prod": "yarn clean && yarn install --frozen-lockfile && yarn pull  && yarn lint && yarn format && yarn build",
        "preflight:clean": "yarn clean && yarn install --verbose && yarn db:push && yarn db:pull && yarn lint && yarn format && yarn build"
    },
