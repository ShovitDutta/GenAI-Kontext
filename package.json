{
    "private": true,
    "type": "module",
    "name": "kontext",
    "version": "1.0.0",
    "license": "SEE LICENSE IN LICENSE",
    "author": "Shovit Dutta <shovitdutta1@gmail.com>",
    "description": "Kontext is a GenAI-powered news blog to stay updated with the latest news, transformed into engaging blog posts using GenAI.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ShovitDutta/kontext.git"
    },
    "engines": {
        "node": ">=20.19.4"
    },
    "scripts": {
        "dev": "next dev",
        "lint": "next lint",
        "start": "next start",
        "format": "prettier --write .",
        "clean": "npx rimraf .next .cache node_modules",
        "build": "npx rimraf .next .cache && yarn lint && next build",
        "db": "yarn db:generate && yarn db:push",
        "db:preview": "tsx src/scripts/db/preview.ts",
        "db:populate": "tsx src/scripts/db/populate.ts",
        "db:push": "drizzle-kit push --force --config=drizzle.config.ts",
        "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
        "db:reset": "node src/scripts/reset.js && npx rimraf src/lib/db/migrations",
        "db:load:clean": "yarn db:reset && yarn db:populate && yarn db:preview",
        "db:load": "yarn lint && yarn format && yarn db:populate && yarn db:preview",
        "preflight:dev": "yarn clean && yarn install --silent && yarn lint && yarn format && yarn build",
        "preflight:prod": "yarn clean && yarn install --frozen-lockfile --silent && yarn lint && yarn format && yarn build",
        "preflight:clean": "yarn clean && yarn install --silent && yarn db:reset && yarn db:push && yarn lint && yarn format && yarn build",
        "codemod:next-og-import": "npx @next/codemod@canary next-og-import . --force",
        "codemod:async-params": "npx @next/codemod@canary next-async-request-api . --force",
        "codemod:built-in-next-font": "npx @next/codemod@canary built-in-next-font . --force",
        "codemod:name-default-component": "npx @next/codemod@canary name-default-component . --force",
        "codemod:add-missing-react-import": "npx @next/codemod@canary add-missing-react-import . --force",
        "codemod:next-image-to-legacy-image": "npx @next/codemod@canary next-image-to-legacy-image . --force",
        "codemod:metadata-to-viewport-export": "npx @next/codemod@canary metadata-to-viewport-export . --force",
        "codemod": "yarn codemod:async-params && yarn codemod:next-og-import && yarn codemod:metadata-to-viewport-export && yarn codemod:built-in-next-font && yarn codemod:next-image-to-legacy-image && yarn codemod:add-missing-react-import && yarn codemod:name-default-component"
    },
    "dependencies": {
        "@auth/drizzle-adapter": "1.10.0",
        "@google/generative-ai": "^0.24.1",
        "@langchain/core": "^0.3.65",
        "@langchain/google-genai": "^0.2.16",
        "@langchain/langgraph": "^0.3.10",
        "@tailwindcss/postcss": "^4.1.11",
        "@tanstack/react-query": "latest",
        "@tanstack/react-query-devtools": "5.83.0",
        "autoprefixer": "^10.4.20",
        "axios": "1.11.0",
        "date-fns": "^4.1.0",
        "dotenv": "17.2.1",
        "drizzle-kit": "0.31.4",
        "drizzle-orm": "0.44.3",
        "drizzle-seed": "0.3.1",
        "framer-motion": "^12.23.6",
        "langchain": "^0.3.30",
        "lucide-react": "^0.526.0",
        "next": "^15.4.2",
        "next-auth": "^5.0.0-beta.28",
        "next-themes": "^0.4.4",
        "pg": "8.16.3",
        "postgres": "3.4.7",
        "prettier": "^3.6.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-markdown": "^10.1.0",
        "react-share": "^5.2.2",
        "sonner": "^2.0.6",
        "tailwind-merge": "^3.3.1",
        "tailwindcss-animate": "^1.0.7",
        "vaul": "^1.1.2",
        "zod": "4.0.10"
    },
    "devDependencies": {
        "@types/node": "^24.0.15",
        "@types/pg": "8.15.4",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "eslint": "9.32.0",
        "eslint-config-next": "15.4.4",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.11",
        "tsx": "4.20.3",
        "typescript": "^5"
    }
}
