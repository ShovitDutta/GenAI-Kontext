audit=false                          # Prevent audit warnings from cluttering logs (CI-specific)
cache=~/.npm                         # Use the global cache efficiently (adjust in CI if needed)
progress=true                        # Show progress output for better CI logs
save-exact=true                      # Save exact versions in package-lock.json-
strict-ssl=true                      # Always use SSL for registry requests
fetch-retries=2                      # Retry on network failure up to 3 times
engine-strict=true                   # Enforce correct Node/npm versions based on package.json
lockfile-version=2                   # Force npm to use lockfile version 2 (npm v7+)
prefer-offline=true                  # Prefer offline cache if available
fetch-retry-factor=2                 # Exponential backoff factor
ignore-scripts=false                 # Allow lifecycle scripts (set true in secure CI if needed)
update-notifier=false                # Suppress update notifier in CI
legacy-peer-deps=false               # Automatically install peer dependencies (modern behavior)
fetch-retry-mintimeout=10000         # Minimum retry delay (ms)
fetch-retry-maxtimeout=60000         # Maximum retry delay (ms)
registry=https://registry.npmjs.org  # Set a custom registry (useful for private packages)